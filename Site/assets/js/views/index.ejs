                            <li class="song"></li>
                            <li class="song"></li>
                            <li class="song"></li>
                            <li class="song"></li>
                            <li class="song"></li>
                            <li class="song"></li>
                            <li class="song"></li>
                            <li class="song"></li>
                            <li class="song"></li>
                            <li class="song"></li>
                            <li class="song"></li>
                            <li class="song"></li>
                            <li class="song"></li>
                            <li class="song"></li>
                            <li class="song"></li>
                            <li class="song"></li>
                            <li class="song"></li>
                            <li class="song"></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col spotify">
                <div class="title">
                    <h2>Login to your spotify account</h2>
                </div>
                <form method="GET" action="/sl">
                    <button type="submit" class="bt_login" id="sl">Login</button>
                </form>
                <div class="pl_content">
                    <label class="logged">Logged in as: </label>
                    <label class="yt_user"><%=spotify_user%></label><br />
                    <label class="subtitle" id="sp_pl_amount">Available playlists: <%=sp_pl%></label><br />
                    <select class="dropdown" id="sp_pl">
                        <option>...</option>
                    </select>
                    <label class="subtitle" id="sp_songs_amount">Available songs: <%=sp_songs%></label><br />
                    <div class="songs">
                        <ul id="sp_songs">
                            <li class="song"></li>
                            <li class="song"></li>
